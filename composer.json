{
    "type": "project",
    "require": {
        "darkenphp/framework": "dev-main",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Build\\" : ".build"
        }
    },
    "scripts": {
        "dev": "@php darken dev",
        "build": "@php darken build",
        "watch": "@php darken watch",
        "kill" : "kill $(ps aux | grep '[p]hp' | awk '{print $2}')",
        "vercel": [
          "@php darken build",
          "npm ci && npm run build"
        ]
    },
    "config": {
        "process-timeout": 0
    }
}
